<div class="container-fluid main-container">
  <%= render "layouts/admin/admin_navbar" %>
  <div class="col-md-10 content">
    <div class="panel panel-default" id="height-600">
      <div class="panel-heading">
        <%= t "word" %>
      </div>
      <div class="row">
        <div class="col-md-6 col-md-offset-3" id="height-600">
          <h2><%= t "add_new_word" %></h2>
          <%= form_for [:admin, @word], remote: true do |f| %>
            <%= render "shared/error_messages", object: @word %>
            <%= f.text_field :content, placeholder: t("place_word") %></br>
            <%= f.select :category_id, @categories %>
            <%= f.fields_for :answers do |answer| %>
              <span class="fields">
                <div class="col-md-2 bh-input">
                  <%= answer.check_box :is_correct, class: "check_answers",
                    value: false %>
                </div>
                <div class="col-md-10"><%= answer.text_field :content %></div>
              </span>
            <% end %>
            <%= hidden_field_tag "at-least-two-answers-msg",
              t("required-two-answers") %>
            <%= f.submit yield(:button_text), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
      <div id="div-words" >
        <%= render @words %>
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
