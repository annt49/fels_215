<% @user ||= current_user %>
<div class="stats">
  <%= link_to relationships_path id: @user.id, title: "following" do %>
    <strong id="following" class="stat">
      <%= @user.following.count %>
      <%= t ".following" %>
    </strong>
  <% end %>
  <%= link_to relationships_path id: @user.id, title: "followers" do %>
    <strong id="followers" class="stat">
      <%= pluralize @user.followers.count, t(".follower") %>
    </strong>
  <% end %>
</div>
